		<script>
			var c_width = document.documentElement.clientWidth;
			var bg_height = c_width*562/375;
			//窗体宽度发生变化
			window.onresize = function() {
				//背景图片 比例 667*375  	要根据
				c_width = document.documentElement.clientWidth;
				bg_height = c_width*562/375;
				$(".za-content-bg").css("height", bg_height+ "px")
				if(document.documentElement.clientHeight > bg_height){
//					$(".div-more").css("height",document.documentElement.clientHeight - bg_height +50+ "px")
					$(".div-more").css("height",0+ "px")
				}
			}
			$(".za-content-bg").css("height",bg_height + "px")
			if(document.documentElement.clientHeight > bg_height){
//				$(".div-more").css("height",document.documentElement.clientHeight - bg_height+50 + "px")
				$(".div-more").css("height",0+ "px")
			}
			initEvent();	
			window.onload = function(){
				initIndex();	
			}
			function initEvent(){
				//底部菜单点击
				$(".mui-bar-tab a").click(function(e) {
					var index = $(this).index();
					switch(index) {
						case 0:
							window.location.href = "../info/zixun/zixun.html";
							break;
						case 1:
							window.location.reload();
							break;
						case 2:
							window.location.href = "../info/zixun/zixun_live.html";
							break;
						case 3:
							window.location.href = "../user/user_index.html";
							break;
						default:
							break;
					}
				})
				$("div[class^='menu-']").click(function(){
					if($(this).attr('is_show') == '1'){
						$('.not-start-warp').fadeIn(300);
						setTimeout(function(){
							$('.not-start-warp').fadeOut(300);
						},2000)
						return;
					}
					var index = $(this).index();
					var league_id = $(this).attr('id');
					switch(index) {
						case 0:
							window.location.href = "xijia.html?league_id="+league_id;
							break;
						case 1:
							window.location.href = "yingchao.html?league_id="+league_id;
							break;
						case 2:
							window.location.href = "fajia.html?league_id="+league_id;
							break;
						case 3:
							window.location.href = "dejia.html?league_id="+league_id;
							break;
						case 4:
							window.location.href = "yijia.html?league_id="+league_id;
							break;
						default:
							break;
					}
				})
				$('.i-close').click(function(){
					$('.not-start-warp').fadeOut(300)
				})
			}
			function initIndex(){
				var res = HCCP.ajax.get("/iation/league/index")
				console.log(JSON.stringify(res));
				if(res && res.data){
					var obj = res.data;
					for(var el in obj){
						fiflterName(obj[el].league_name,obj[el].is_show,obj[el].league_id);
					}
				}
			}
			function fiflterName(nameStr,value,_id){
				switch (nameStr){
					case '西甲':
						$('.menu-1').attr('is_show',value);
						$('.menu-1').attr('id',_id);
						break;
					case '英超':
						$('.menu-2').attr('is_show',value);
						$('.menu-2').attr('id',_id);
						break;
					case '法甲':
						$('.menu-3').attr('is_show',value);
						$('.menu-3').attr('id',_id);
						break;
					case '德甲':
						$('.menu-4').attr('is_show',value);
						$('.menu-4').attr('id',_id);
						break;
					case '意甲':
						$('.menu-5').attr('is_show',value);
						$('.menu-5').attr('id',_id);
						break;
					default:
						break;
				}
			}
		</script>
